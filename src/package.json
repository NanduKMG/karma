{
  "name": "Karma",
  "version": "1.0.0-alpha-1",
  "description": "Back-end API framework for colleges.",
  "apidoc": {
    "title": "Karma Documentation"
  },
  "private": true,
  "scripts": {
    "preinstall": "rm -rf ./node_modules/_",
    "postinstall": "./link-modules.sh",
    "dev": "DEBUG=cet:server,app, nodemon ./bin/www",
    "start": "NODE_ENV=production node ./bin/www",
    "lint": "./node_modules/.bin/eslint ./ --report-unused-disable-directives --format 'node_modules/eslint-friendly-formatter'",
    "lint--fix": "./node_modules/.bin/eslint ./ --fix --report-unused-disable-directives --format 'node_modules/eslint-friendly-formatter'",
    "test": "NODE_ENV=test mocha --recursive --exit"
  },
  "dependencies": {
    "ajv": "^6.5.0",
    "bluebird": "^3.5.1",
    "body-parser": "~1.18.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "~4.16.3",
    "helmet": "^3.12.1",
    "karma": "file:lib",
    "lodash": "^4.17.10",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.7",
    "mocha": "^5.2.0"
  }
}
